<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/bottomContainer">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/nik_controller"
                        android:maxLength="16"
                        android:hint="NIK"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"/>
                    <EditText
                        android:id="@+id/nama_controller"
                        android:maxLength="100"
                        android:hint="Nama"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/tempatlahir_controller"
                        android:maxLength="50"
                        android:hint="Tempat Lahir"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:inputType="text"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/tanggallahir_controller"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tanggal Lahir"
                            android:inputType="text"
                            android:maxLength="50"
                            android:onClick="showDatePickerDialog"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/alamat_controller"
                        android:maxLength="300"
                        android:lines="3"
                        android:minLines="3"
                        android:hint="Alamat"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:inputType="text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8sp"
                        android:text="Jenis Kelamin"
                        android:textSize="14sp">
                    </TextView>
                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/jk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/jk_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laki-laki"
                            android:onClick="setJenisKelamin"/>
                        <RadioButton android:id="@+id/jk_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perempuan"
                            android:onClick="setJenisKelamin"/>
                    </RadioGroup>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8sp"
                        android:text="Pekerjaan"
                        android:textSize="14sp">
                    </TextView>
                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/job"
                        android:orientation="vertical">
                        <RadioButton android:id="@+id/job_pns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pegawai Negeri Sipil"
                            android:onClick="setPekerjaan"/>
                        <RadioButton android:id="@+id/job_swasta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pegawai Swasta"
                            android:onClick="setPekerjaan"/>
                        <RadioButton android:id="@+id/job_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pelajar"
                            android:onClick="setPekerjaan"/>
                        <RadioButton android:id="@+id/job_wiraswasta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wiraswasta"
                            android:onClick="setPekerjaan"/>
                    </RadioGroup>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8sp"
                        android:text="Status Perkawinan"
                        android:textSize="14sp">
                    </TextView>
                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/kawin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/kawin_false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum Kawin"
                            android:onClick="setStatusPerkawinan"/>
                        <RadioButton android:id="@+id/kawin_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kawin"
                            android:onClick="setStatusPerkawinan"/>
                    </RadioGroup>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/purple_700"
            android:layout_alignParentBottom="true"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="add"
                android:onClick="submitForm"
                android:text="@string/button_submit"
                android:textColor="@color/purple_700"
                android:textStyle="bold"></Button>
        </LinearLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>